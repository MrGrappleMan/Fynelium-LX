[Unit]
Description=ðŸ”‹ Automatic Power management commander, improves efficiency and reduces energy usage without performance impact
After=basic.target
Before=shutdown.target

[Service]
User=root
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/sbin/tlp init start
ExecReload=/usr/sbin/tlp start
ExecStop=/usr/sbin/tlp init stop

# CommonSnippet - Daemons
IOSchedulingClass=2
IOSchedulingPriority=7
Nice=19
#Restart=always
RestrictRealtime=false
RestartSec=60
StartLimitBurst=5
StartLimitIntervalSec=300

[Install]
WantedBy=multi-user.target
